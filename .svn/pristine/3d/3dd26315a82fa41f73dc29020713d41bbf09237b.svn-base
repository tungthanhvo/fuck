    .row
      .col-md-6
        label
          h3 SKILL METRICS
    .row.page-break
      .col-xs-6
        .well
          span
            u Experience
          ol(start='0')
            li 0 month
            li 1-6 months
            li 6-12 months
            li 1-2 years
            li 2-5 years
            li > 5 years
      .col-xs-6
